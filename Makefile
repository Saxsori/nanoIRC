SRC = ./src/main.cpp ./src/Server.cpp

OBJ = ${SRC:.cpp=.o}

NAME = nanoIRC

CXX = c++

CXXFLAGS = -Wall -Werror -Wextra -std=c++98 -g
	
RM = rm -rf

all : ${NAME}

${NAME} : ${OBJ}
		${CXX} ${CXXFLAGS} ${OBJ} -o ${NAME}

clean : 
		${RM} ${OBJ}

fclean : clean
		${RM} ${NAME}
 
re : fclean all